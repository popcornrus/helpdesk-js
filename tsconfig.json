{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "$src/*": ["src/*"],
      "$utils/*": ["src/utils/*"],
      "$interfaces/*": ["src/interfaces/*"],
      "$configs/*": ["src/configs/*"],
      "$enums/*": ["src/enums/*"],
      "$core/*": ["src/core/*"],

      "$httpModule/*": ["src/modules/http/*"],
      "$websocketModule/*": ["src/modules/websocket/*"]
    }
  },
  "types": [
    "@types/jest"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}